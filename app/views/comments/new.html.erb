<div class="main">
    <h1>コメント作成</h1>

    <%= form_tag("/comments/create") do %>
    <div class="report-new">
        <div class="error-messages">
            <% @comment.errors.full_messages.each do |message| %>
                <p><%= message %></p>
            <% end %>
        </div>

        <div>
            <p>コメント</p>
            <textarea name="comment"></textarea>
        </div>

        <input type="submit" value="作成" class="new-btn">
    </div>
    <% end %>
</div>
