<div class="main">

    <div class="toppage-img">
        <img src="/user-image/toppage.jpg">
    </div>

    <div class="login-btn">
        ログイン
    </div>

    <div id="login_form">
        <%= form_tag("/users/login_user") do %>
        <div class="report-new">
            <div class="error-messages">
                <% if @message %>
                    <p><%= @message %></p>
                <% end %>
            </div>

            <div>
                <p>Email</p>
                <input name="email" >
                <p>パスワード</p>
                <input type="password" name="password" >
            </div>

            <input type="submit" value="ログイン" class="new-btn">
        </div>
        <% end %>
    </div>
</div>