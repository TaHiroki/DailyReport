<div class="main">
    <h1>日報編集</h1>

    <%= form_tag("/reports/update/#{@report.id}") do %>
    <div class="report-new">
        <div>
            <p>タイトル</p>
            <input name="title" value="<%= @report.title %>">
            <p>日報内容</p>
            <textarea name="content"><%= @report.content %></textarea>
        </div>

        <input type="submit" value="作成" class="new-btn">
    </div>
    <% end %>
</div>