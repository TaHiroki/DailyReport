<div class="main">
    <h1>日報一覧</h1>

    <div class="reports">
        <% @reports.each do |report|%>
            <div class="report">
                <h2>username</h2>
                <div>
                    <div class="report-title">
                        タイトル：　<%= report.title %>
                    </div>
                    <div class="report-show">
                        <%= link_to  "詳細", "/reports/show/#{report.id}" %>
                    </div>
                </div>
                <div class="clear"></div>
                <span><%= report.created_at %></span>
                <div class="report-action">
                    <%= link_to  "編集", "/reports/edit/#{report.id}" %>
                    <%= link_to  "削除", "/reports/destroy/#{report.id}",{method: "post"} %>
                </div>
            </div>
        <% end %>
    </div>
</div>
